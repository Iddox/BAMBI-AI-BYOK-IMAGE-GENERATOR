# Base de données
DATABASE_URL=postgres://postgres:postgres@localhost:5432/bambi

# Authentification
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Paiements
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
STRIPE_PREMIUM_PRICE_ID=your_stripe_premium_price_id

# Sécurité
# Clé de chiffrement pour les clés API (32 caractères hexadécimaux)
# Générer avec: openssl rand -hex 16
# Cette clé est utilisée pour chiffrer/déchiffrer les clés API des utilisateurs
# Ne jamais partager cette clé ou l'exposer publiquement
ENCRYPTION_KEY=your_encryption_key_32_hex_chars

# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Simulation (développement uniquement)
# Mettre à true pour simuler la validation des clés API sans appeler les APIs externes
SIMULATE_API_VALIDATION=false
